@model MeetMeUp_Updated.Models.ApplicationUser

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1 class="m-4">My profile</h1>
    <hr />

    <div class="heading">
        <img src=@Model.UserImg class="rounded-circle mr-3" alt="User Image" style="width:150px;height:150px" />
        <div class="heading-text">
            <h2>@Model.UserName</h2>
            @Html.ActionLink("Edit picture", "ChangeImage", "Profile")
        </div>
    </div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserImg)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserImg)
        </dd>

    </dl>

    @Html.ActionLink("Edit picture", "ChangeImage", "Profile") |
    @Html.ActionLink("Change password", "ChangePassword", "Manage")
</div>
