@model MeetMeUp_Updated.Models.Meeting
@{
    ViewBag.Title = "Create";
}

<div class="w-50">
    <h1 class="m-4">Create new meeting</h1>
    <form method="POST" action="Create" class="m-4">
        <div class="form-group w-50">
            <h4>Meeting Title:</h4>
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        </div>
        <div class="form-group w-50">
            <p>Meeting Date:</p>
            @Html.TextBoxFor(model => model.Date, new { type = "date", @class = "form-control" })
        </div>
        <div class="form-group w-50">
            <p>Meeting Time:</p>
            @Html.TextBoxFor(model => model.Time, new { type = "time", @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary btn-lg m-4">Save Meeting</button>
    </form>

</div>
