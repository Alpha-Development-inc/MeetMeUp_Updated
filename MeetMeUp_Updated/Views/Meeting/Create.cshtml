@model MeetMeUp_Updated.Models.MeetingCreateViewModel
@{
    ViewBag.Title = "Create";
}

<div class="w-50">
    <h1 class="m-4">Create new meeting</h1>
    @using (Html.BeginForm("Create", "Meeting", FormMethod.Post, new { enctype = "multipart/form-data", @class = "m-4" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group w-50">
            <h4>Meeting Title:</h4>
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
        <div class="form-group w-50">
            <h4>Group:</h4>
            @Html.DropDownListFor(model => model.SelectedGroup, Model.AllGroups, "-Select Group-", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedGroup, "", new { @class = "text-danger" })
        </div>
        <div class="form-group w-50">
            <p>Meeting Date:</p>
            @Html.TextBoxFor(model => model.Date, new { type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
        <div class="form-group w-50">
            <p>Meeting Time:</p>
            @Html.TextBoxFor(model => model.Time, new { type = "time", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary btn-lg m-4">Save Meeting</button>
    }

</div>
