<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-light">
                Greetings Stranger
            </div>
            <div class="list-group list-group-flush sidebar-links">
                <a class="list-group-item list-group-item-action bg-dark text-light d-block">My profile</a>
                <a href="/Group/Groups" class="list-group-item list-group-item-action bg-dark text-light d-block">My groups</a>
                <a href="/Meeting/Meetings" class="list-group-item list-group-item-action bg-dark text-light d-block">My meetings</a>
            </div>
            <span class="spacer"></span>
            <div class="list-group list-group-flush sidebar-links">
                <a href="#" class="list-group-item list-group-item-action bg-dark text-light d-block">Login</a>
                <a href="#" class="list-group-item list-group-item-action bg-dark text-light d-block">Signup</a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Menu</button>

                <span class="spacer"></span>

                <a class="navbar-brand" href="#">
                    MeetMeUp.com
                </a>
            </nav>
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
    </script>
</body>
</html>
