@model MeetMeUp_Updated.Models.Group

<div>
    <h1 class="m-4">Group Details</h1>
    <hr />

    <div class="heading">
        <img src=@Model.GroupImage alt="Group Image" style="width:150px;height:150px" />
        <div class="heading-text">
            <h2>@Model.GroupName</h2>
            @Html.ActionLink("Edit picture", "ChangeImage", "Group")
        </div>
    </div>

    <div class="group-details">
        <h3>Group Members:</h3>
        <ul class="group-members">
            @foreach (var member in Model.Members)
            {
                <li class="group group-details-members-item">
                    <img class="rounded-circle mr-3" src=@Model.GroupImage 
                         alt="Group Member Image" style="width:30px;height:30px" />
                    <span>@member.UserName</span>
                </li>
            }
        </ul>
    </div>

    <div class="group-details">
        <h3>Group Meetings:</h3>
    </div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GroupName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GroupImage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupImage)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.GroupID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
