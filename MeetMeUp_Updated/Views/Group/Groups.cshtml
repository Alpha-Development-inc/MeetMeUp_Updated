@model IEnumerable<MeetMeUp_Updated.Models.Group>
@{
    ViewBag.Title = "Groups";
}

<div class="container-fluid">
    <h1 class="m-4">My groups</h1>
    <div class="list-group">

        @foreach (var group in Model)
        {
            <a href="#" class="list-group-item list-group-item-action">
                <div class="group">
                    <img class="rounded-circle mr-3" src="~/Content/Images/unknown_group.jpg"
                         alt="groupImage" width="100px">
                    <h4 class="ml-4 mr-4">@group.GroupName</h4>
                    <ul class="group-members">
                        @foreach (var member in group.Members)
                        {
                            <li>@member</li>
                        }
                    </ul>
                </div>
            </a>
        }
    </div>
    @Html.ActionLink("Create new group", "Create", "Group", new { @class = "btn btn-primary btn-lg m-4" })
</div>

